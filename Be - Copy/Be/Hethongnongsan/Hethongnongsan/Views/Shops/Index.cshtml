@model Hethongnongsan.Models.Shop
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Headerpage.cshtml";
    ViewBag.idnguoidung = Request.Cookies["nguoidung"]?.Value.Replace("=", ""); ;
}
<!-- ***** Preloader Start ***** -->
<h1>@ViewBag.Message</h1>
<div id="js-preloader" class="js-preloader">
    <div class="preloader-inner">
        <span class="dot"></span>
        <div class="dots">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
</div>
<!-- ***** Header Area End ***** -->
@{ if (Model != null && @ViewBag.nguoidung != null)
    {

        if (ViewBag.sanpham == null)
        {
            <div class="main-banner">
                <div class="container">

                    <div class="row">

                        <div class="col-lg-6 align-self-center">
                            <div class="caption header-text" style="display:flex">
                                <h1 >Hien tai ban khong co san pham nao</h1>
                                <a href="/Shops/newShop/@ViewBag.nguoidung.Idnguoidung" style="color: white">Hay them san pham cua rieng ban nao</a>
                            </div>
                            <div class="col-lg-4 offset-lg-2">
                                <div class="right-image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="section trending">
                <div class="container">
                    <ul class="trending-filter">
                        <li>

                        </li>

                        <li>

                        </li>


                    </ul>

                    <div class="row trending-box">


                        <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6">
                            <div class="item">
                                <div class="thumb">


                                </div>
                                <div class="down-content">

                                </div>
                            </div>
                        </div>



                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="pagination">
                                
                               
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        }
        else
        {
            <div class="main-banner">
                <div class="container">
                    <h6>Welcome to</h6>
                    <h2>@Model.Tenshop</h2>
                    <div class="row">
                        <h2>@ViewBag.nguoidung.Tennguoidung</h2>
                        <div class="col-lg-6 align-self-center">
                            <div class="caption header-text" style="display:flex">
                                <div>
                                    <h4 style="padding: 10px; ">Ngay Thanh lap  > @Model.Ngaythanhlap</h4>
                                    <h4 style="padding: 10px; text-align:left">Dia chi > @Model.Diachi</h4>
                                    <h4 style="padding: 10px; text-align: left; ">So dien thoai > @Model.Sdt</h4>
                                    <h4 style="padding: 10px; text-align: left; ">Email > @Model.Email</h4>
                                    <h4 style="padding: 10px; text-align: left; ">Facebook > @Model.Facebook</h4>
                                    <h4 style="padding: 10px; text-align: left; ">Instagram > @Model.Instagram</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 offset-lg-2">
                            <div class="right-image">
                                <img src="~/App_Start/vendor/images/categories-03.jpg" alt="">
                                <span class="price">$22</span>
                                <span class="offer">-40%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="section trending">
                <a href="/Supply/Addpro/@ViewBag.nguoidung.Idnguoidung" style="color: black">Them san pham</a>
                <div class="container">
                    <ul class="trending-filter">
                        <li>

                        </li>
                        @{if (ViewBag.sanpham.Count == 0)
                            {

                                <a href="/Supply/Addpro/@ViewBag.nguoidung.Idnguoidung" style="color: black">Hay them san pham cua rieng ban nao</a>

                            }
                            else
                            {
                                foreach (var item in ViewBag.sanpham)
                                {
                                    <li>
                                        <a class="is_active" href="#!" data-filter=".@item.Tenloai">@item.Tenloai</a>
                                    </li>
                                }
                            }
                        }


                    </ul>

                    <div class="row trending-box">
                        @{ foreach (var item in ViewBag.sanpham)
                            {
                                <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6 @item.Tenloai">
                                    <div class="item">
                                        <div class="thumb">
                                            <a href="product-details.html"><img src="~/img/@item.Linkhinhanh" style="height:315px" alt=""></a>
                                            <span class="price"><em>$36</em>$@item.Gia</span>
                                        </div>
                                        <div class="down-content">
                                            <span class="category">@item.Tensanpham</span>
                                            <h4>@item.Tenloai</h4>
                                            <a href="/Shops/Edit/@item.Idsanpham"></a>
                                        </div>
                                        <div style="margin-left:40px">
                                            <a href="/Supply/Editpro/@item.Idsanpham">Edit san pham</a>
                                            <a href="/Supply/Deletepro?idsp=@item.Idsanpham&idshop=@item.Idshop" style="margin-top:20px">xoa san pham</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul>
                                <li><a href="/Shops/Delete/@ViewBag.idnguoidung" style="color:black"> Xoa Shop</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="main-banner">
            <div class="container">

                <div class="row">

                    <div class="col-lg-6 align-self-center">
                        <div class="caption header-text" style="display:flex">
                            <div>
                                <a style="color:white" href="/Shops/newShop/@ViewBag.nguoidung.Idnguoidung">Tao Shop Cho Rieng Ban Nao</a>
                            </div>
                        </div>
                        <div class="col-lg-4 offset-lg-2">
                            <div class="right-image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="section trending">
            <div class="container">
                <ul class="trending-filter">
                    <li>

                    </li>

                    <li>

                    </li>


                </ul>

                <div class="row trending-box">


                    <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6">
                        <div class="item">
                            <div class="thumb">


                            </div>
                            <div class="down-content">

                            </div>
                        </div>
                    </div>



                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="pagination">
                            <li><a href="#"> &lt; </a></li>
                            <li><a href="#">1</a></li>
                            <li><a class="is_active" href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#"> &gt; </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>


    }
}


